@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Equipes</title>
</head>

<body>
    <h1>Tela de Equipes</h1>

    <form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
        <label for="">Nome</label>
        <input type="text" name="Nome">

        <label for="">Imagem</label>
        <input type="file" name="Imagem">

        <button type="submit">Cadastrar</button>
    </form> 

    <form method="post" action='@Url.Action("Deletar")'>
        <label for="">Nome</label>
        <input type="text" name="Nome">

        <button type="submit">Deletar</button>
    </form> 

    @* criando uma table para armazenar nossos dados *@

    <table class="table table-striped table-responsive">
        <thead>
            <th>Id</th>
            <th>Nome</th>
            <th>Imagem</th>
        </thead>

        <tbody>

            @foreach (Equipe equipe in ViewBag.Equipe)
            {

                <tr>
                    <td>@equipe.IdEquipe</td>
                    <td>@equipe.Nome</td>
                    <td>
                        <img src="/img/Equipes/@equipe.Imagem" alt="" width="60px">

                    </td>
                </tr>
            
            }

        </tbody>

    </table>

</body>

</html>